<Window x:Class="EquipmentMaintenance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentMaintenance"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding Path=MainWindowVM, Source={StaticResource viewModelLocator}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <local:EquipmentView DataContext="{Binding Equipment}" Visibility="{Binding IsEquipmentVisible, Converter={StaticResource BoolToVis}}"/>
        <local:EquipmentDetailView DataContext="{Binding EquipmentDetail}" Visibility="{Binding IsEquipmentDetailVisible, Converter={StaticResource BoolToVis}}"/>
    </Grid>
</Window>
